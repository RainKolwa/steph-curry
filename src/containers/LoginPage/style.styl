.page-login
  position absolute
  left 0
  top 0
  width 100%
  height 100%
  display flex
  flex-direction column
  justify-content center
  div
    display flex
    input
      flex 1
      padding 0
      margin-right 0
  input
    height 40px
    margin 0 20px
    border none
    border-radius 4px
    background antiquewhite
    text-indent 15px
    outline none
  button
    height 40px
    margin 0 20px
    border 1px solid grey
    border-radius 4px
    background white
    outline none
    