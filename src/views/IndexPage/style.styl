@import '../../assets/styles/variables'

.page-home
  background url('../../assets/images/bg-home.jpg') center top no-repeat
  background-size cover
  .logo
    margin-top 1.66rem
  .title, .subtitle
    position absolute
  .title
    left .92rem
    top 3.56rem
    width 5.66rem
    height 2.17rem
    background url(../../assets/images/title.png) no-repeat
    background-size contain
  .subtitle
    left .93rem
    top 2.56rem
    width 5.63rem
    height 1.37rem
    background url(../../assets/images/subtitle.png) no-repeat
    background-size contain
  .entry
    text-align center
    p
      font-size .17rem
  dl
    margin-top 4.7rem
    text-align center
    dt
      font-size .25rem
      color secondaryTextColor
    dd
      font-size .23rem
      color textColor